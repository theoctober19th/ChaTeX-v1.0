<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thecoffeecoders.chatex.DevelopersActivity">

    <include
        android:id="@+id/developer_app_bar"
        layout="@layout/app_bar_layout"></include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/developer_barsha_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/developer_suman_title"
        android:layout_below="@+id/developer_app_bar"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/developer_barsha_pic"
        app:layout_constraintLeft_toLeftOf="@+id/developer_barsha_name"
        app:layout_constraintTop_toBottomOf="@+id/developer_app_bar"
        app:layout_goneMarginLeft="16dp"
        app:layout_goneMarginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/developer_barsha_name" />

    <TextView
        android:id="@+id/developer_barsha_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/developer_bikalpa_pic"
        android:layout_alignEnd="@+id/developer_barsha_pic"
        android:layout_alignStart="@+id/developer_barsha_pic"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Barsha Pokharel"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer_barsha_pic" />

    <TextView
        android:id="@+id/developer_barsha_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/developer_barsha_name"
        android:layout_below="@+id/developer_barsha_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Application Designer"
        app:layout_constraintLeft_toLeftOf="@+id/developer_barsha_name"
        app:layout_constraintRight_toRightOf="@+id/developer_barsha_name"
        app:layout_constraintTop_toBottomOf="@+id/developer_barsha_name" />

    <TextView
        android:id="@+id/developer_barsha_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/developer_bikalpa_pic"
        android:layout_alignStart="@+id/developer_barsha_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:elevation="1dp"
        android:fontFamily="casual"
        android:text="You are a winner, when you are with the winner."
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/developer_barsha_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/developer_barsha_pic"
        app:layout_goneMarginTop="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/developer_bikalpa_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/developer_bikalpa_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/developer_bikalpa_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer_barsha_title" />

    <TextView
        android:id="@+id/developer_bikalpa_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/developer_bikalpa_title"
        android:layout_alignStart="@+id/developer_bikalpa_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="bikalpa"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/developer_bikalpa_pic"
        app:layout_constraintRight_toRightOf="@+id/developer_bikalpa_pic"
        app:layout_constraintTop_toBottomOf="@+id/developer_bikalpa_pic" />

    <TextView
        android:id="@+id/developer_bikalpa_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/developer_suman_pic"
        android:layout_alignEnd="@+id/developer_bikalpa_pic"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Programmer"
        app:layout_constraintLeft_toLeftOf="@+id/developer_bikalpa_name"
        app:layout_constraintTop_toBottomOf="@+id/developer_bikalpa_name"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/developer_bikalpa_name"
        app:layout_constraintHorizontal_bias="0.45" />

    <TextView
        android:id="@+id/developer_bikalpa_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/developer_bikalpa_title"
        android:layout_alignTop="@+id/developer_barsha_pic"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:elevation="1dp"
        android:fontFamily="casual"
        android:text="Fear not to love. Forget not to smile. Stop not to learn."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/developer_bikalpa_pic"
        app:layout_constraintTop_toTopOf="@+id/developer_bikalpa_pic"
        app:layout_constraintHorizontal_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/developer_suman_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/developer_suman_name"
        android:layout_alignEnd="@+id/developer_suman_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/developer_suman_pic"
        app:layout_constraintLeft_toLeftOf="@+id/developer_suman_name"
        app:layout_constraintTop_toBottomOf="@+id/developer_bikalpa_title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/developer_suman_name" />

    <TextView
        android:id="@+id/developer_suman_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/developer_suman_title"
        android:layout_toStartOf="@+id/developer_barsha_status"
        android:fontFamily="serif"
        android:text="Suman Khadka"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/developer_suman_pic" />

    <TextView
        android:id="@+id/developer_suman_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/developer_suman_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:text="Graphics Designer"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintLeft_toLeftOf="@+id/developer_suman_name"
        app:layout_constraintRight_toRightOf="@+id/developer_suman_name"
        app:layout_constraintTop_toBottomOf="@+id/developer_suman_name" />

    <TextView
        android:id="@+id/developer_suman_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:text="Suman will say something here"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/developer_suman_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/developer_suman_pic" />

</android.support.constraint.ConstraintLayout>
